  <ItemGroup>
    <PackageReference Include="GarageGroup.Infra.Azure.Swagger" Version="0.3.1-build.1" />
    <PackageReference Include="GarageGroup.Infra.Endpoint.Core" Version="0.9.0" />
    <PackageReference Include="Microsoft.Azure.Functions.Worker.Core" Version="1.15.0" />
  </ItemGroup>

</Project>